<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.user.PaymentMethodActivity">

    <include layout="@layout/header_main"  />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Payment Method"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:onClick="callThisMethod"
                    android:padding="5dp"
                    android:background="@drawable/dr_button_payment_method"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPayBkash"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_bkash"/>

                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bkash"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:onClick="callThisMethod"
                    android:padding="5dp"
                    android:background="@drawable/dr_button_payment_method"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPayRocket"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_rocket"/>

                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rocket"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:onClick="callThisMethod"
                    android:padding="5dp"
                    android:background="@drawable/dr_button_payment_method"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPayNagad"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_nagad"/>

                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nagad"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:onClick="callThisMethod"
                    android:padding="5dp"
                    android:background="@drawable/dr_button_payment_method"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPayCityBank"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_city_bank"/>

                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City Bank"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:onClick="callThisMethod"
                    android:padding="5dp"
                    android:background="@drawable/dr_button_payment_method"
                    android:layout_margin="10dp"
                    android:id="@+id/btnPayBracBank"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_brack_bank"/>

                    <TextView
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BRAC BANK"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_lighten"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>