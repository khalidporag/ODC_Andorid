<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvMAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="100 BDT"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="14sp"/>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/gray_lighten"/>

        <TextView
            android:id="@+id/tvMType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Type"
            android:gravity="center"
            android:textSize="12sp"/>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/gray_lighten"/>

        <TextView
            android:id="@+id/tvMGraduate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Graduate"
            android:gravity="center"
            android:textSize="12sp"/>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/gray_lighten"/>

        <TextView
            android:id="@+id/tvMDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Duration"
            android:gravity="center"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btnGetStart"
            android:textColor="@color/white"
            android:background="@drawable/dr_button_get_start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:text="Get Started"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>