<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

<!--    <style parent="android:Theme.DeviceDefault.Dialog" name="SpotsCustom">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText"/>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>-->

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#F00</item>
    </style>

    <style name="primaryAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
<!--        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/green</item>-->
        <item name="colorControlActivated">@color/gray</item>
    </style>


    <style name="EditTextDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>

    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_default_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


</resources>
